          "enum": [
            "SO:1000008"
          ]
        },
        "consequence": {
          "$ref": "../globalId.json#/properties/globalId",
          "description": "The consequence of the mutation; should be an SO term"
        },
        "references": {
          "type": "array",
          "items": {
            "$ref": "../publicationRef.json#",
            "description": "set of publications that support the genomic location annotation for this variant record."
          }
        },
        "notes": {
          "type": "array",
          "items": {
            "$ref": "variantNote.json",
            "description": "free text note associated with the variant.  variantNote.json also specifies an optional set of references for this note."
          }
        },
        "crossReferences": {
          "description": "Collection holding a limited set of database cross references for each object.",
          "type": "array",
          "items": {
            "$ref": "../gene/geneCrossReference.json"
